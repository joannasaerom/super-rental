{{#if addNewAnnouncement}}
  <h1>New announcement</h1>
  <div>
    <form {{action 'saveAnnouncement' on='submit'}}>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" required="required"}}
      </div>
      <select name="type" onchange={{action "selectType" value="target.value"}}>
        {{#each announcementTypes as |announcementType|}}
          <option value={{announcementType.type}} selected={{eq type announcementType.type}}>{{announcementType.type}}</option>
        {{/each}}
      </select>
      <div class="form-group">
        <label for="message">Message</label>
        {{input required="required" value=message id="message"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" type="date" required="required"}}
      </div>
      <button>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New announcement</button>
{{/if}}
